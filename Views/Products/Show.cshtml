@model ProductItem
@{
    ViewBag.Title = Model.Title;
    ViewBag.Description = Model.MetaDescription;
    ViewBag.Keywords = Model.MetaKeywords;
}

<div>
    <h1>
        @Model.Name
    </h1>
    <div>
        @if (Model.Images.Any())
        {
            @foreach (Image image in Model.Images)
            {
                <img src="~/images/ProductItems/@image.ProductItemId/@image.Name" alt="@image.Alt" />
            }
        }
        else
        {
            <img src="~/images/DefaultImages/Soon.png" alt="В процессе добавления." />
        }
    </div>
    <div>
        <h4>@Model.Name</h4>
        @if (Model.Discount == 0)
        {
            <h5>@Model.Price</h5>
        }
        else
        {
            <s>@Model.Price</s>
            <h5>@Math.Round(Model.Price*(1- Model.Discount*0.01))</h5>
            <h6>Скидка @Model.Discount%</h6>
        }
    </div>
    <div>
        @if (Model.Sizes.Any())
        {
            @foreach (Size size in Model.Sizes)
            {
                <div>
                    @size.SizeValue
                </div>
            }
        }
    </div>
</div>
<div>
    @Html.Raw(Model.Description)
</div>