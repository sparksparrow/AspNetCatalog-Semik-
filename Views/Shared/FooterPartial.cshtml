<footer class="bg-dark" id="tempaltemo_footer">
    <div class="container">
        <div class="row">

            <div class="col-md-4 pt-5">
                <h2 class="h2 text-success border-bottom pb-3 border-light logo">@Config.CompanyName</h2>
                <ul class="list-unstyled text-light footer-link-list">
                    <li>
                        <i class="fas fa-map-marker-alt fa-fw"></i>
                        Москва, 117292, м. Профсоюзная
                    </li>
                    <li>
                        <i class="fa fa-phone fa-fw"></i>
                        <a class="text-decoration-none" href="tel:@Config.CompanyPhoneShort">@Config.CompanyPhone</a>
                    </li>
                    <li>
                        <i class="fa fa-envelope fa-fw"></i>
                        <a class="text-decoration-none" href="@Config.CompanyEmail">@Config.CompanyEmail</a>
                    </li>
                </ul>
            </div>

            <div class="col-md-4 pt-5">
                <h2 class="h2 text-light border-bottom pb-3 border-light">Товары для вас</h2>
                <ul class="list-unstyled text-light footer-link-list">
                    <li><a class="text-decoration-none" asp-controller="Products" asp-action="Index" asp-route-currentGenderValues=@Gender.Male>Мужское</a></li>
                    <li><a class="text-decoration-none" asp-controller="Products" asp-action="Index" asp-route-currentGenderValues=@Gender.Female>Женское</a></li>
                    @foreach (PluralProductItemTypes type in Enum.GetValues(typeof(PluralProductItemTypes)))
                    {
                        <li><a class="text-decoration-none" asp-controller="Products" asp-action="Index" asp-route-currentproductItemTypeValues=@type>@Html.DisplayFor(x => type)</a></li>
                    }
                </ul>
            </div>

            <div class="col-md-4 pt-5">
                <h2 class="h2 text-light border-bottom pb-3 border-light">Дополнительная информация</h2>
                <ul class="list-unstyled text-light footer-link-list">
                    <li><a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Главная</a></li>
                    <li><a class="text-decoration-none" asp-area="" asp-controller="Products" asp-action="Index" asp-route-id="">Каталог</a>
                    <li><a class="text-decoration-none" asp-area="" asp-controller="About" asp-action="Index">О нас</a></li>
                    <li><a class="text-decoration-none" asp-area="" asp-controller="Contacts" asp-action="Index">Контакты</a></li>
                </ul>
            </div>

        </div>

        <div class="row text-light mb-4">
            <div class="col-12 mb-3">
                <div class="w-100 my-3 border-top border-light"></div>
            </div>
            <div class="col-auto me-auto">
                <ul class="list-inline text-left footer-icons">
                    <li class="list-inline-item border border-light rounded-circle text-center">
                        <a class="text-light text-decoration-none" target="_blank" href="http://facebook.com/"><i class="fab fa-facebook-f fa-lg fa-fw"></i></a>
                    </li>
                    <li class="list-inline-item border border-light rounded-circle text-center">
                        <a class="text-light text-decoration-none" target="_blank" href="https://www.instagram.com/"><i class="fab fa-instagram fa-lg fa-fw"></i></a>
                    </li>
                    <li class="list-inline-item border border-light rounded-circle text-center">
                        <a class="text-light text-decoration-none" target="_blank" href="https://twitter.com/"><i class="fab fa-twitter fa-lg fa-fw"></i></a>
                    </li>
                    <li class="list-inline-item border border-light rounded-circle text-center">
                        <a class="text-light text-decoration-none" target="_blank" href="https://www.linkedin.com/"><i class="fab fa-linkedin fa-lg fa-fw"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="w-100 bg-black py-3">
        <div class="container">
            <div class="row pt-2">
                <div class="col-12">
                    <p class="text-left text-light">
                        Copyright &copy; 2021 - Fair&Fashion
                        | Designed by <a rel="sponsored" href="https://templatemo.com" target="_blank">TemplateMo</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

</footer>
